<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choose_lable"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_idf_student"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_txt_idf_choose"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="家长"
        android:textColor="@drawable/txt_pw_idf_choose"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_idf_teacher"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_txt_idf_choose"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="教师"
        android:textColor="@drawable/txt_pw_idf_choose"
        android:textSize="16sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/txt_idf_parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_txt_idf_choose"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="家长"
        android:textColor="@drawable/txt_pw_idf_choose"
        android:textSize="16sp" />

</LinearLayout>