<?xml version="1.0" encoding="utf-8"?>
<com.dt5000.ischool.widget.SwipeMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeMenuView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="1dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lineraLayout"
        xmlns:t1="http://schemas.android.com/tools"
        xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/txtFromTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来自XXX老师"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="时间"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtFromTeacher"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="消息内容XXXXXXX"
                android:textColor="@color/add19"
                android:textSize="18sp" />
        </RelativeLayout>

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#fff"
            tl:tl_divider_width="1dp"
            tl:tl_textSelectColor="#66000000"
            tl:tl_textUnselectColor="#66000000"
            tl:tl_textsize="16sp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="#e7e7e7" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDelete_Group"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/color_ff4a57"
        android:text="删 除"
        android:textColor="@android:color/white" />
</com.dt5000.ischool.widget.SwipeMenuView>