<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/view_topbar_1" />

    <TextView
        android:id="@+id/txt_grade"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#eaeaea"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="年级"
        android:textColor="#7c7c80"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/lLayout_to_classroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_color_list_item_bg_1"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/a_to_classroom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="同步课堂"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_2" />

    <LinearLayout
        android:id="@+id/lLayout_to_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_color_list_item_bg_1"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/a_to_exam" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="自测评估"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_2" />

</LinearLayout>