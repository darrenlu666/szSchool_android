<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_rect_bg_1"
        android:paddingBottom="2dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="2dp"
        android:text="星期一 09:30"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/lLayout_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="60dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/img_head_left"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/a_head"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
           android:minHeight="45dp"
            android:minWidth="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/a_talk_left"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/txt_content_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="井口附近路段将来到家乐福来的就是高房价的垃圾管理的技术管理"
                android:textColor="#000000"
                android:textSize="15sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_pic_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/img_video_play_left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/video_play"
                    android:visibility="gone"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/img_emoji_left"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:clickable="false"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rLayout_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="60dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/img_head_right"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/a_head"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:minHeight="45dp"
            android:minWidth="60dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/img_head_right"
            android:background="@drawable/a_talk_right"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/txt_content_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="井口附近路段将来到家乐福来的就是高房价的垃圾管理的技术管理"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_pic_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_video_play_right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/video_play"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/img_emoji_right"
               android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:clickable="false"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>