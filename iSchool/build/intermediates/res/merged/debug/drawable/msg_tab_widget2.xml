<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <!-- This is the main color -->
        <shape>
            <solid android:color="#0066CC" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:right="1dp">

        <!-- This is the border color -->
        <shape>
            <solid android:color="#E9F2FC" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

</layer-list>