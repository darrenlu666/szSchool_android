<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_color_list_item_bg_1"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="我的日记我的日记我的日记我的日记我的日记我的日记我的日记我的日记我的日记我的日记我的日记我的日记我的日记"
            android:textColor="@color/common_text_black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_level"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/txt_name"
            android:background="@drawable/a_level_jiayou" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_pic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/a_pic_attach" />

            <ImageView
                android:id="@+id/img_doc"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/a_doc_attach" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="解决垃圾垃圾垃圾垃圾大幅度放大看空间分割放倒垃圾垃圾垃圾利率浮动幅度上看风景的设计费"
        android:textColor="@color/common_text_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2015-12-13 11：34"
        android:textColor="#84ccc9"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/line_2" />

</LinearLayout>