<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/view_topbar_1" />

    <LinearLayout
        android:id="@+id/lLayout_down"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_album_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rect_edittext_bg_1"
            android:gravity="center_vertical"
            android:hint="相册名称"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/common_text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_grade"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rect_edittext_bg_1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="选择年级"
            android:textColor="@color/common_text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_class"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rect_edittext_bg_1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="选择班级"
            android:textColor="@color/common_text_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_album_content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rect_edittext_bg_1"
            android:gravity="top|left"
            android:hint="相册描述"
            android:padding="10dp"
            android:textColor="@color/common_text_black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_rect_button_bg_1"
            android:text="确认创建"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>