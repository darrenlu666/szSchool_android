<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/a_head"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老师"
                    android:textColor="#3a5283"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/lLayout_delete"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="18dp"
                        android:background="@drawable/a_delete" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="发表了一条动态"
                android:textColor="@color/common_text_black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/lLayout_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/lLayout_pic_single"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.dt5000.ischool.widget.SquareLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/img_pic_single"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/image_loading_bg"
                            android:scaleType="centerCrop" />
                    </com.dt5000.ischool.widget.SquareLayout>

                    <com.dt5000.ischool.widget.SquareLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >
                    </com.dt5000.ischool.widget.SquareLayout>

                    <com.dt5000.ischool.widget.SquareLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >
                    </com.dt5000.ischool.widget.SquareLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lLayout_pic_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <LinearLayout
                        android:id="@+id/lLayout_pic1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <com.dt5000.ischool.widget.SquareLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/image_loading_bg"
                                android:scaleType="centerCrop" />
                        </com.dt5000.ischool.widget.SquareLayout>

                        <com.dt5000.ischool.widget.SquareLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/image_loading_bg"
                                android:scaleType="centerCrop" />
                        </com.dt5000.ischool.widget.SquareLayout>

                        <com.dt5000.ischool.widget.SquareLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/image_loading_bg"
                                android:scaleType="centerCrop" />
                        </com.dt5000.ischool.widget.SquareLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lLayout_pic2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <com.dt5000.ischool.widget.SquareLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/image_loading_bg"
                                android:scaleType="centerCrop" />
                        </com.dt5000.ischool.widget.SquareLayout>

                        <com.dt5000.ischool.widget.SquareLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/image_loading_bg"
                                android:scaleType="centerCrop" />
                        </com.dt5000.ischool.widget.SquareLayout>

                        <com.dt5000.ischool.widget.SquareLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/image_loading_bg"
                                android:scaleType="centerCrop" />
                        </com.dt5000.ischool.widget.SquareLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lLayout_pic3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <com.dt5000.ischool.widget.SquareLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/image_loading_bg"
                                android:scaleType="centerCrop" />
                        </com.dt5000.ischool.widget.SquareLayout>

                        <com.dt5000.ischool.widget.SquareLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/image_loading_bg"
                                android:scaleType="centerCrop" />
                        </com.dt5000.ischool.widget.SquareLayout>

                        <com.dt5000.ischool.widget.SquareLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/img9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/image_loading_bg"
                                android:scaleType="centerCrop" />
                        </com.dt5000.ischool.widget.SquareLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="20小时前"
                    android:textColor="#575757"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/lLayout_share"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:background="@drawable/share_click" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lLayout_praise"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_praise"
                            android:layout_width="16dp"
                            android:layout_height="13dp"
                            android:background="@drawable/a_praise_pressed" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lLayout_comment"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_comment"
                            android:layout_width="18dp"
                            android:layout_height="13dp"
                            android:background="@drawable/a_comment" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/lLayout_upstr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="8dp"
                        android:background="@drawable/a_praise_show" />

                    <TextView
                        android:id="@+id/txt_upstr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="某某某觉得很赞"
                        android:textColor="#3a5283"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.dt5000.ischool.widget.NestedListView
                    android:id="@+id/listview_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f3f3f5"
                    android:cacheColorHint="@color/transparent"
                    android:divider="@null"
                    android:fadingEdge="none"
                    android:listSelector="@color/transparent"
                    android:scrollbars="none" >
                </com.dt5000.ischool.widget.NestedListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_2" />
</LinearLayout>