<?xml version="1.0" encoding="utf-8"?>
<com.dt5000.ischool.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/image_loading_bg"
        android:scaleType="centerCrop" />

    <CheckBox
        android:id="@+id/checkBox_choose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/selector_drawable_checkbox_pic_choose"
        android:button="@null"
        android:checked="false" />

</com.dt5000.ischool.widget.SquareLayout>