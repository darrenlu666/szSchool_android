<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/nav" >

        <LinearLayout
            android:id="@+id/lLayout_commen_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/refresh_selector"
            android:gravity="center"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:background="@drawable/a_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="公文流转"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/rLayout_add_homework"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/refresh_selector"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/add" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/add3"
        android:focusable="true"  
        android:focusableInTouchMode="true" >

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_editview"
            android:gravity="center_vertical"
            android:hint="搜索"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit"
            android:layout_alignRight="@+id/edit"
            android:layout_alignTop="@+id/edit"
            android:src="@drawable/search" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listview_document"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/add4"
        android:divider="@drawable/div_line">
    </ListView>

</LinearLayout>