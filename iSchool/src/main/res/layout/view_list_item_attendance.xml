<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="2016-09-12"
        android:textColor="#7c7c80"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/lLayout_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_date"
        android:background="@drawable/txt_bg_1"
         android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_in"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:text="进校 7:30"
            android:textColor="@color/common_text_black"
            android:textSize="15sp" />
        
        <ImageView 
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow_right_1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/lLayout_in"
        android:layout_marginBottom="10dp"
        android:background="@drawable/txt_bg_2"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="出校 15:30"
        android:textColor="@color/common_text_black"
        android:textSize="14sp"
        android:visibility="gone" />

</RelativeLayout>